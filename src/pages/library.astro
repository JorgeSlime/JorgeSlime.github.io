    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mt-8">
        {posts.length > 0 ? (
            posts.map((post) => (
                <a href={post.url} class="block p-4 bg-white shadow-md rounded hover:bg-gray-50">
